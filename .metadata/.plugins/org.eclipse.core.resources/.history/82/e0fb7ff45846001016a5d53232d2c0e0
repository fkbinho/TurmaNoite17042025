package poo;

public class Principal {
	public static void main(String[] args) {
	
		Carro meuCarro = new Carro();
        meuCarro.marca = "BYD";
        meuCarro.modelo = "KING";
        meuCarro.ano = 2025;
        
        System.out.println("----------");
        meuCarro.exibirDados();
        
        meuCarro.ligar();

        Carro fabiCarro = new Carro();
        fabiCarro.marca = "BMW";
        fabiCarro.modelo = "i8";
        fabiCarro.ano = 2015;
        
        System.out.println("----------");
        fabiCarro.exibirDados();

        
        Carro hebertCarro = new Carro();
        hebertCarro.marca = "Ferrari";
        hebertCarro.modelo = "F8";
        hebertCarro.ano = 2020;
        
        System.out.println("----------");
        hebertCarro.exibirDados();
        
	}
}
