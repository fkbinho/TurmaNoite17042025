package laco_repeticao;

public class LacoFor {

	public static void main(String[] args) {

		//inicialização | condição | iterador
		for(int num = 0; num <= 10; num++) {
			System.out.println(num);
		}
		
		System.out.println("-------------------------------");
		
		for(int num = 10; num >= 0; num--) {
			System.out.println(num);
		}
		
		
	}

}
